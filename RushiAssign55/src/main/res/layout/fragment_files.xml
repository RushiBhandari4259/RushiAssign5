<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rushiFilesFragmentId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilesFragment">


    <TextView
        android:id="@+id/rushiFilesFragmentIdFiles"
        android:layout_width="249dp"
        android:layout_height="78dp"
        android:text="@string/files_frag"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/rushiFilesFragmentIdFirstName"
        android:layout_width="166dp"
        android:layout_height="119dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:rotation="45"
        android:text="@string/rushi"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rushiFilesFragmentIdLastName"
        android:layout_width="154dp"
        android:layout_height="132dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="112dp"
        android:gravity="center"
        android:rotation="-45"
        android:text="@string/bhandari"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rushiFilesFragmentIdGetContentButton"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="600dp"
        android:text="@string/get_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rushiFilesFragmentIdFileContentDisplay"
        android:layout_width="373dp"
        android:layout_height="236dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="348dp"
        android:text="@string/empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rushiFilesFragmentIdDeleteButton"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="600dp"
        android:text="@string/delete_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>