<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rushiShapesFragmentId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShapesFragmenty">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/rushiShapesFragmentIdTitle"
        android:layout_width="355dp"
        android:layout_height="57dp"
        android:text="@string/shape_fragment"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <AutoCompleteTextView
        android:id="@+id/rushiShapesFragmentIdAutoCompleteView"
        android:layout_width="392dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        android:hint="@string/enter_your_email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/rushiShapesFragmentIdFireDataBaseStorageEnableDisable"
        android:layout_width="402dp"
        android:layout_height="101dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="224dp"
        android:text="@string/store_data_in_firebase_database"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/rushiShapesFragmentIdFireDataBaseStorageDataDisplay"
        android:layout_width="398dp"
        android:layout_height="158dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="366dp"
        android:text="@string/textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/rushiAdview"
        android:layout_width="324dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="652dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>